{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZendeskDS",
  "version": "0.1.0",
  "identifier": "com.terrybbz.zendeskds",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ZendeskDS - Template Builder",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "$DOCUMENT/ZendeskDS/**"
        ]
      }
    }
  }
}
